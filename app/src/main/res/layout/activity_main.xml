<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    android:background="#ffb6d3ff">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_fname"
        android:layout_marginTop="109dp"
        android:text="First Name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_lastname"
        android:layout_below="@+id/editText_fname"
        android:layout_alignStart="@+id/editText_fname"
        android:layout_marginTop="49dp"
        android:text="Last Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_dob"
        android:layout_below="@+id/editText_lastname"
        android:layout_alignStart="@+id/editText_lastname"
        android:layout_marginTop="48dp"
        android:text="D.O.B"
        android:layout_alignEnd="@+id/editText_lastname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert your details"
        android:id="@+id/textView_personalDetails"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff040404"
        android:textSize="22dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button_submit"
        android:layout_alignTop="@+id/button_clear"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/button_clear"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/editText_dob" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button_backToMain"
        android:layout_alignTop="@+id/button_clear"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name: "
        android:id="@+id/lbl_fname"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:layout_alignTop="@+id/editText_fname"
        android:layout_alignParentStart="true"
        android:layout_alignLeft="@+id/editText_fname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name: "
        android:id="@+id/lbl_lname"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:layout_alignTop="@+id/editText_lastname"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:id="@+id/lbl_dob"
        android:layout_alignBottom="@+id/editText_dob"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:layout_alignTop="@+id/editText_dob" />
</RelativeLayout>
